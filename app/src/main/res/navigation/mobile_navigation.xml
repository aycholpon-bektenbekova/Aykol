<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/authFragment">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.aykol.ui.home.HomeFragment"
        android:label="@string/title_news"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.aykol.ui.services.ServicesFragment"
        android:label="@string/title_services"
        tools:layout="@layout/fragment_services" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.aykol.ui.profile.NotificationsFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/authFragment"
        android:name="com.example.aykol.AuthFragment"
        tools:layout="@layout/fragment_auth" />

    <fragment
        android:id="@+id/newsFragment"
        android:name="com.example.aykol.NewsFragment"
        tools:layout="@layout/fragment_news" />
</navigation>